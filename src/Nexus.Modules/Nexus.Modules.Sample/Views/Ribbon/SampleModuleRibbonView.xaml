<UserControl x:Class="Nexus.Modules.Sample.Views.Ribbon.SampleModuleRibbonView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Nexus.Modules.Sample.Views.Ribbon"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Ribbon x:Name="MainMenu" x:FieldModifier="protected internal">

        <!-- keys:UIElementExtension.MergeKey="{x:Static const:FinancesModuleMergeKeys.RibbonTab}"> -->
        <RibbonTab Header="Sample Tab">
            <RibbonGroup Header="Sample Group">
                <RibbonButton Label="Sample Button" Command="{Binding Path=GoToSampleViewCommand}" />
            </RibbonGroup>
        </RibbonTab>
    </Ribbon>
</UserControl>
